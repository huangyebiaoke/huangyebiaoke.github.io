<footer id="footer">
  <!-- Font-Awesome -->
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.1.0/css/all.css" integrity="sha384-lKuwvrZot6UHsBSfcMvOkWwlCMgc0TaWr+30HWe3a4ltaBwTZhyTEggF5tJv8tbt" crossorigin="anonymous">
  <style type="text/css">
    .throb{
      animation:animate 1.33s cubic-bezier(0.1, 1.39, 0.95, 1.93) infinite;
      filter:drop-shadow(0px 0px 10px rgb(255,80,0));
    }
    @keyframes animate{
      0%{
        transform: scale(0.9,0.9);
        opacity: 0.5;
      }
      50%{
        transform: scale(1,1);
        opacity: 0.7;
      }
      100%{
        transform: scale(1.2,1.2);
        opacity: 1;
      }
    }
  </style>
  <div class="outer">
    <div id="footer-info">
    	<div class="footer-left">
    		&copy; <%= date(new Date(), 'YYYY') %>
        <i class="fa fa-heartbeat throb" style="color:rgb(255, 80, 0)"></i>
        <%= config.author || config.title %>
    	</div>
      <div class="footer-right">
          <a href="https://hexo.io/" rel="external nofollow" target="_blank">Hexo</a>  Theme <a href="https://github.com/litten/hexo-theme-yilia" rel="external nofollow" target="_blank">Yilia</a> by Litten
      </div>
	    <span id="busuanzi_container_site_pv" title="page view">
      <i class="fa fa-eye"></i>
	    <span id="busuanzi_value_site_pv"></span>
	    </span>
	    <span id="busuanzi_container_site_uv" title="unique visitor">
	    <i class="fa fa-user"></i>
      <span id="busuanzi_value_site_uv"></span>
	    </span>
      <p>Hosted by <a href="https://www.qiniu.com" style="font-weight: bold">七牛云</a></p>
    </div>
  </div>
  <script async src="//busuanzi.ibruce.info/busuanzi/2.3/busuanzi.pure.mini.js">
  </script>
</footer>
 
